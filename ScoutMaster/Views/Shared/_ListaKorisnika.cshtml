@model IEnumerable<ScoutMaster.Models.KorisnikBO>

@{
    ViewBag.Title = "Index";
}

<body class="pozadina-dodaj-azu" style="height: 800px;">
    <h2 class="naslov-pocetna" style="margin-top: 40px;">Prikaz svih korisnika</h2>
    <div class="forma-dodaj-azu" style="margin-top: 80px;">
        <table class="table">
            <tr>
                @*<th>
                @Html.DisplayNameFor(model => model.IdKorisnika)
            </th>*@
                <th>
                    Ime i prezime
                </th>
                <th>
                    Korisničko ime
                </th>
                <th>
                    Email
                </th>
                <th>
                    Lozinka
                </th>

                <th>

                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ime)  @Html.DisplayFor(modelItem => item.Prezime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KorisnickoIme)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lozinka)
                    </td>
                    <td>
                        @Html.ActionLink("Ažuriraj korisnika", "AzurirajKorisnika", new { id = item.IdKorisnika }, new { @class = "btn btn-warning", @style = "width: 140px; margin-right: 5px; margin-left: -10px;" })
                        @Html.ActionLink("Obriši korisnika", "ObrisiKorisnika", new { id = item.IdKorisnika }, new { @class = "btn btn-danger", @style = "width: 140px; margin-right: -30px;" })
                    </td>
                </tr>
            }

        </table>
        @if (TempData["Error"] != null)
        {
            <div class="red text-danger">
                <p class="poruka"><strong>Greška:</strong> @TempData["Error"].ToString()</p>
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="green text-success">
                <p class="poruka"><strong>Uspešno:</strong> @TempData["Success"].ToString()</p>
            </div>
        }
    </div>
</body>
