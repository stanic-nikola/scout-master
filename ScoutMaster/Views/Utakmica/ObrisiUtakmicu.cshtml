@model ScoutMaster.Models.UtakmicaBO

@{
    ViewBag.Title = "ObrisiUtakmicu";
}

<h2 style="color:white; font-size: 31px; margin-top: 31px;">Brisanje utakmice</h2>


<body class="pozadina-obrisi">
    <div class="obrisi-text">
        <h3 style="margin-top: 36px;">Da li ste sigurni da želite obrisati ovu utakmicu?</h3>
        <hr />
        <div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <dl class="dl-horizontal" style="font-size: 18px;">
                    <dt style="margin-top: 1px;">
                        @Html.DisplayNameFor(model => model.IdUtakmice):
                        @Html.HiddenFor(x => x.IdUtakmice)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.IdUtakmice)
                    </dd>

                    <dt style="margin-top: 8px;">
                        @Html.DisplayNameFor(model => model.Datum):
                        @Html.HiddenFor(x => x.Datum)
                    </dt>

                    <dd style="margin-top: 8px;">
                        @Html.DisplayFor(model => model.Datum)
                    </dd>

                    <dt style="margin-top: 8px;">
                        @Html.DisplayNameFor(model => model.Mesto):
                        @Html.HiddenFor(x => x.Mesto)
                    </dt>

                    <dd style="margin-top: 8px;">
                        @Html.DisplayFor(model => model.Mesto)
                    </dd>

                    <dt style="margin-top: 8px;">
                        @Html.DisplayNameFor(model => model.Klubovi):
                        @Html.HiddenFor(x => x.Klubovi)
                    </dt>

                    <dd style="margin-top: 8px;">
                        @Html.DisplayFor(model => model.Klubovi)
                    </dd>

                    <dt style="margin-top: 8px;">
                        @Html.DisplayNameFor(model => model.Rezultat):
                        @Html.HiddenFor(x => x.Rezultat)
                    </dt>

                    <dd style="margin-top: 8px;">
                        @Html.DisplayFor(model => model.Rezultat)
                    </dd>

                </dl>
                <div class="form-actions no-color" style="margin-top: 50px;">
                    <input type="submit" value="Obriši" class="btn btn-danger" style="width: 130px; margin-right: 5px;" /> 
                    @Html.ActionLink("Vrati se nazad", "Index", null, new { @class = "btn btn-primary", @style = "width: 130px;" })
                </div>
            }
        </div>
    </div>
</body>
