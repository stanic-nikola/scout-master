@model ScoutMaster.Models.UtakmicaBO

@{
    ViewBag.Title = "AzurirajUtakmicu";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<body class="pozadina-pocetna" style="height: 800px;">
    <div class="forma-dodaj-azu" style="margin-top: 80px; margin-bottom: 40px; height: 530px;">
        <h2 class="naslov-pocetna" style="margin-bottom: 15px;">Ažuriranje utakmice</h2>
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.IdUtakmice)

            <div class="form-group" style="margin-top: 70px;">
                @Html.LabelFor(model => model.Datum, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Datum, new { htmlAttributes = new { @class = "form-control textbox", @style = "width: 825px;" } })
                    @Html.ValidationMessageFor(model => model.Datum, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-top: 40px;">
                @Html.LabelFor(model => model.Mesto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Mesto, new { htmlAttributes = new { @class = "form-control textbox", @style = "width: 825px;" } })
                    @Html.ValidationMessageFor(model => model.Mesto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-top: 40px;">
                @Html.LabelFor(model => model.Klubovi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Klubovi, new { htmlAttributes = new { @class = "form-control textbox", @style = "width: 825px;" } })
                    @Html.ValidationMessageFor(model => model.Klubovi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="margin-bottom: 45px; margin-top: 40px;">
                @Html.LabelFor(model => model.Rezultat, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Rezultat, new { htmlAttributes = new { @class = "form-control textbox", @style = "width: 825px;" } })
                    @Html.ValidationMessageFor(model => model.Rezultat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ažuriraj utakmicu" class="btn btn-success" style="width: 130px; margin-right: 5px; margin-bottom: 120px;" />
                    @Html.ActionLink("Vrati se nazad", "Index", null, new { @class = "btn btn-primary", @style = "width: 130px; margin-bottom: 120px;" })
                </div>
            </div>
        </div>
    </div>
</body>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
